<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyPrimary</item>
    </style>

    <style name="edit_text_email">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_primary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="edit_text_style">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>
    
    <style name="text_14">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>