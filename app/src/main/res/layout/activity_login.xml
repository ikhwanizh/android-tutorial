<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity"
    android:paddingHorizontal="24dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="36dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/masuk"
        android:textSize="32sp"
        android:layout_marginTop="38dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Selamat Datang !"
        android:textSize="14sp"
        android:textColor="@color/greyPrimary"/>

    <TextView
        android:layout_marginTop="32dp"
        android:text="Masukkan Email atau Nomor HP"
        style="@style/text_16" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ketik salah satu di sini"
        android:drawableStart="@drawable/outline_email_24"
        style="@style/edit_text_email" />

    <TextView
        android:text="Kata Sandi"
        style="@style/text_16"
        android:layout_marginTop="24dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ketik di sini"
        android:drawableStart="@drawable/outline_lock_24"
        android:drawableEnd="@drawable/outline_visibility_off_24"
        style="@style/edit_text_email"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:text="Lupa Kata Sandi?"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/greySecondary"
        android:text="Masuk"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="14dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:textColor="@color/greySecondary"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:text="atau masuk dengan"/>

    <Button
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="24dp"
        android:padding="14dp"
        app:icon="@drawable/google"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@null"
        app:strokeColor="@color/greySecondary"
        app:strokeWidth="1dp"
        app:cornerRadius="180dp"
        android:text="Google"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="32dp"
        android:textAlignment="center"

        android:text="Belum punya akun? Daftar"/>
</LinearLayout>
</ScrollView>